<h1>Bookmark Manager</h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
  <li id="boolmark-<%= bookmark.id %>">
    <a href="<%= bookmark.url %>">
      <%= bookmark.title %>
    </a>
    <form action="/bookmarks/delete_<%= bookmark.id %>" method="post" id="<%= bookmark.id %>">

      <input type="hidden" value="<%= bookmark.id %>" name="id"/>
      <input type="hidden" value="DELETE" name="_method"/>
    <input type="submit" value="delete"/>
    </form>

    <form action="/bookmarks/update" method="post" id="<%= bookmark.id %>">

      <input type="hidden" value="<%= bookmark.id %>" name="id"/>
    <input type="submit" value="update"/>
    </form>

  </li>
  <% end %>
</ul>
