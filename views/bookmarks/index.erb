<h1>Bookmark Manager</h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
  <li>
    <a href="<%= bookmark.url %>">
      <%= bookmark.title %>
    </a>
    <form action="/bookmarks/delete" method="post" id="<%= bookmark.id %>">
      <input type="hidden" value="<%= bookmark.id %>" name="id"/>
    <input type="submit" value="delete"/>
    </form>
  </li>
  <% end %>
</ul>
